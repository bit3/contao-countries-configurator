  "keywords":["contao", "countries", "configurator"],
  "type":"contao-module",
  "homepage":"",
  "license":"LGPL-3.0+",
  "authors":[
    {
      "name":"Tristan Lins",
      "email":"tristan.lins@bit3.de",
      "homepage":"http://bit3.de",
      "role":"Developer"
    }
  ],
  "support":{
    "issues":"https://github.com/bit3/contao-countries-configurator/issues",
    "irc":"irc://irc.freenode.org/contao.dev",
    "source":"https://github.com/bit3/contao-countries-configurator" 
  },
  "require":{
    "php":">=5.3",
    "contao/core":">=3,<4"
  },
  "replace":{
    "contao-legacy/countries-configurator": "*"
  },
  "autoload": {
    "classmap": ["src/system/modules"]
  },
  "extra":{
    "contao": {
      "sources":{
        "src": "system/modules/"
      }
    },
		"branch-alias" : {
			"dev-master" : "1.x-dev"
		}
  }
}
